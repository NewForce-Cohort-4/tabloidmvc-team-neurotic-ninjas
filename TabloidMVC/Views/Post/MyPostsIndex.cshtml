@model IEnumerable<TabloidMVC.Models.Post>

@{
    ViewData["Title"] = "MyPostsIndex";
}
<div class="container pt-5">
    <h1>My Posts</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.ImageLocation)
                </th>*@
                
                @*<th>
                    @Html.DisplayNameFor(model => model.PublishDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserProfile)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>*@
                    @*<td>
                    @Html.DisplayFor(modelItem => item.ImageLocation)
                </td>*@
                    @*<td>
                    @Html.DisplayFor(modelItem => item.PublishDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsApproved)
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserProfile.FullName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Details">
                            <i class="fas fa-eye"></i>
                        </a>
                        @if (item.IsCurrentUser)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>