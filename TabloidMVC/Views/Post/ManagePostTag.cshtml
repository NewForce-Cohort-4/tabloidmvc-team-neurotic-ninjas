@model TabloidMVC.Models.ViewModels.PostTagCreateViewModel

@{
    ViewData["Title"] = "Add Post Tag";
}

<div class="container pt-5">
    <h1>Manage Post's Tags</h1>

    <h4>Post: @Model.Post.Title</h4>
    <div class="row">
        <div class="col-lg-5">
            <form class="mt-5 card-body" asp-action="CreatePostTag">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.TagIdsToAdd" class="control-label">Add a Tag</label>
                    <select asp-for="@Model.TagIdsToAdd" class="form-control" multiple size="10">
                        @foreach (Tags item in Model.TagOptions)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <input type="submit" asp-route-id="@Model.Post.Id" value="Save" class="btn btn-success " />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-5">
            <form class="mt-5 card-body" asp-action="DeletePostTag">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.TagIdsToRemove" class="control-label">Remove Existing Tags</label>
                    <select asp-for="@Model.TagIdsToRemove" class="form-control" multiple size="10">
                        @foreach (Tags item in Model.CurrentTags)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <input type="submit" asp-action="DeletePostTag" asp-route-id="@Model.Post.Id" value="Remove" class="btn btn-danger " />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
